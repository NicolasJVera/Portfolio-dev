    ]
---


{
    PROJECTS.map(({ image, tittle, description, tags, link }) => (
        <article>
            <h3 class="text-2xl font-semibold text-yellow-200 mb-5 mt-5 text-center">{tittle}</h3>
            <p class="text-lg mb-5 text-pretty">{description}</p>
            <ul class="flex gap-x-4 flex-row mb-2">
                {tags.map((tag) => (
                    <li>
                    <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}>
                    <tag.icon class="size-4"/>
                    {tag.name}
                    </span>
                    </li>
                ))}
                <span></span>
                <a href={link} target="_blank" class="text-yellow-200"> Ver mas... </a>
            </ul>
            <img 
            class="rounded shadow-2xl shadow-white/10 cursor-pointer"
            src={image}
            alt={`Captura de pantalla del proyecto ${image}`} 
             />
        </article>
    ))
}