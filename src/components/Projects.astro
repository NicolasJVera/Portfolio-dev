---
import React from "./icons/React.astro"
import Tailwind from "./icons/Tailwind.astro"

    const TAGS = {
        REACT: {
            name: "React",
            class: "bg-black text-white",
            icon: React,
        },
        TAILWIND: {
            name: 'Tailwind CSS',
            class: 'bg-black text-[#73bcf6]',
            icon: Tailwind,
        }
    }

    const PROJECTS = [
        {
            tittle: 'Cotizador de Criptomonedas',
            description:'Lorem ipsum dolor sit amet consectetur adipisicing elit. Totam, veritatis atque minus sapiente ab asperiores id odio, reprehenderit rem quidem ipsam eligendi earum neque aspernatur illo officiis commodi expedita. Sit.',
            link: '#',
            github: '#',
            image: '/projects/criptos.webp',
            tags: [TAGS.REACT, TAGS.TAILWIND],
        },

        {
            tittle: 'Planificador de Gastos',
            description:'Lorem ipsum dolor sit amet consectetur adipisicing elit. Totam, veritatis atque minus sapiente ab asperiores id odio, reprehenderit rem quidem ipsam eligendi earum neque aspernatur illo officiis commodi expedita. Sit.',
            link: 'https://app-de-presupuestos.netlify.app', 
            github: 'https://github.com/NicolasJVera/app-de-gastos',
            image: '/projects/gastos.webp',
            tags: [TAGS.REACT, TAGS.TAILWIND],
        },

        {
            tittle: 'Seguimientos Pacientes Veterinaria',
            description:'Lorem ipsum dolor sit amet consectetur adipisicing elit. Totam, veritatis atque minus sapiente ab asperiores id odio, reprehenderit rem quidem ipsam eligendi earum neque aspernatur illo officiis commodi expedita. Sit.',
            link: 'https://seguimiento-vete.netlify.app', 
            github: 'https://github.com/NicolasJVera/citas_react',
